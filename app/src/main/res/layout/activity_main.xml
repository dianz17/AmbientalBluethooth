<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9EEBFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:scrollbarSize="4dp"
    android:scrollbarStyle="outsideInset"

    tools:context=".MainActivity">


    <ToggleButton
        android:id="@+id/btnBluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF"
        android:paddingHorizontal="20dp"
        android:textOff="Bluetooth Off"
        android:textOn="Bluetooth On" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinPaired"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone" />

        <ToggleButton
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:checked="false"
            android:enabled="false"
            android:textOff="Disconnected"
            android:textOn="Connected" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

<!--        <ScrollView-->
<!--            android:id="@+id/scrollView"-->
<!--            android:layout_width="170dp"-->
<!--            android:layout_height="130dp"-->
<!--            android:fillViewport="true">-->

        <TextView
            android:id="@+id/textView"
            android:layout_width="170dp"
            android:layout_height="130dp"
            android:layout_marginRight="20dp"
            android:background="#FFFFFF"
            android:inputType="textMultiLine"
            android:textAlignment="center"
            android:textColor="#000000"
            android:scrollbars="vertical"
            android:textSize="14sp" />
<!--        </ScrollView>-->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Light:"
                android:textAlignment="center"
                android:textColor="#000000" />

            <ToggleButton
                android:id="@+id/btnLight"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:enabled="false"
                android:text="LIGHT" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Clear Serial" />

        <Button
            android:id="@+id/btnKill"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Kill All" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="scrollbars movement method"
        android:textSize="20sp" />

</LinearLayout>